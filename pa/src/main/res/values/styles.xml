<resources>
    <!-- Default -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- ActionBar -->
    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBarDefault" parent="NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppThemeNoActionBarLow" parent="NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppThemeNoActionBarModerate" parent="NoActionBar">
        <item name="colorPrimary">@color/risk_moderate</item>
        <item name="colorPrimaryDark">@color/risk_moderate_dark</item>
    </style>

    <style name="AppThemeNoActionBarHigh" parent="NoActionBar">
        <item name="colorPrimary">@color/risk_high</item>
        <item name="colorPrimaryDark">@color/risk_high_dark</item>
    </style>

    <!-- AppToolbar -->
    <style name="AppToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:background">@color/primary</item>
    </style>

    <!-- TabLayout -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>
</resources>
